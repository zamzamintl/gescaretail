<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_o4f_config_settings" model="ir.ui.view">
        <field name="name">Odoo 4 fashion Settings</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="1"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="O4F" data-key="common_models" string="Odoo 4 fashion">
                    <h2>Odoo 4 Fashion settings</h2>

                    <div class="row mt16 o_settings_container">
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_sale_models"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_sale_models"/>
                                <div class="text-muted" id="module_sale_models">
                                    Use Odoo4Fashion in Sale
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_purchase_models"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_purchase_models"/>
                                <div class="text-muted" id="module_purchase_models">
                                    Use Odoo4Fashion in Purchase
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_stock_models"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_stock_models"/>
                                <div class="text-muted" id="module_stock_models">
                                    Use Odoo4Fashion in Stock
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_account_models"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_account_models"/>
                                <div class="text-muted" id="module_account_models">
                                    Use Odoo4Fashion in Accounting
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_product_composition"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_product_composition"/>
                                <div class="text-muted" id="module_product_composition">
                                    Product Compositions
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_product_tags"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_product_tags"/>
                                <div class="text-muted" id="module_product_tags">
                                    Product Tags
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_purchase_sale_preorders"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_purchase_sale_preorders"/>
                                <div class="text-muted" id="module_purchase_sale_preorders">
                                    Product Tags
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_client_sale_history"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_client_sale_history"/>
                                <div class="text-muted" id="module_client_sale_history">
                                    Partern Sale History
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_o4f_product_labels"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_o4f_product_labels"/>
                                <div class="text-muted" id="module_o4f_product_labels">
                                    Product Labels
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_product_models_pricelist"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_product_models_pricelist"/>
                                <div class="text-muted" id="module_product_models_pricelist">
                                    Pricelist reports
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_product_barcode_generator"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_product_barcode_generator"/>
                                <div class="text-muted" id="module_product_barcode_generator">
                                    Barcode generator
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_product_stock_grid"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_product_stock_grid"/>
                                <div class="text-muted" id="module_product_stock_grid">
                                    Add a stock grid view on products
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_product_variant_prices"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_product_variant_prices"/>
                                <div class="text-muted" id="module_product_variant_prices">
                                    Manage Prices for Odoo4Fashion
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
