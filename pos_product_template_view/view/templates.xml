<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets" inherit_id="point_of_sale.assets">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/pos_product_template_view/static/src/js/pos_product_template_view.js"/>
        </xpath>
        <xpath expr="//link[@id='pos-stylesheet']" position="after">
            <link rel="stylesheet" href="/pos_product_template_view/static/src/css/product_template_view.css" />
        </xpath>
    </template>
    <template id="report_assets_pdf" name="your_module_name assets" inherit_id="web.report_assets_pdf">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/pos_product_template_view/static/src/css/product_template_view.css" />
        </xpath>
    </template>
</odoo>
